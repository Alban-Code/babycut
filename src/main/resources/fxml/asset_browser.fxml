<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.onelioh.babycut.controller.AssetBrowser"
      spacing="4"
      style="-fx-padding: 8; -fx-background-color: #020617;">

    <Label text="Fichiers du projet"
           style="-fx-text-fill: #e5e7eb; -fx-font-size: 13; -fx-font-weight: bold;"/>

    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.4">
        <ListView fx:id="assetsListView"
                  VBox.vgrow="ALWAYS"
                  style="-fx-background-color: #0b1120;"/>

        <fx:include source="streams.fxml" fx:id="streamsView" />
    </SplitPane>

