<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="io.onelioh.controller.StreamsController"
            text="Pistes détectées"
            expanded="false"
            minHeight="0.0">

    <content>
        <SplitPane dividerPositions="0.5">
            <items>
                <VBox spacing="4" style="-fx-padding: 4;" minHeight="0.0">
                    <Label text="Vidéo"/>
                    <ListView fx:id="videoStreams" VBox.vgrow="ALWAYS"/>
                </VBox>

                <VBox spacing="4" style="-fx-padding: 4;" minHeight="0.0">
                    <Label text="Audio"/>
                    <ListView fx:id="audioStreams" VBox.vgrow="ALWAYS"/>
                </VBox>
            </items>
        </SplitPane>
    </content>
</TitledPane>
