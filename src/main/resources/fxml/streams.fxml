<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.onelioh.babycut.ui.assets.StreamsController"
      spacing="4"
      style="-fx-padding: 4;">

    <Label text="Pistes détectées"
           style="-fx-text-fill: #e5e7eb; -fx-font-size: 12; -fx-font-weight: bold;"/>

    <SplitPane dividerPositions="0.5">
        <VBox spacing="4" minHeight="0.0">
            <Label text="Vidéo"/>
            <ListView fx:id="videoStreams" VBox.vgrow="ALWAYS"/>
        </VBox>

        <VBox spacing="4" minHeight="0.0">
            <Label text="Audio"/>
            <ListView fx:id="audioStreams" VBox.vgrow="ALWAYS"/>
        </VBox>
    </SplitPane>

</VBox>
